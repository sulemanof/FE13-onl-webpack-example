{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "parser": "@babel/eslint-parser",
    "plugins": ["react"],
    "extends": [
        "airbnb-base",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "import/prefer-default-export": "off"
    },
    "overrides": [
        {
            "files": ["webpack.*.js"],
            "rules": {
                "import/no-extraneous-dependencies": "off"
            }
        }
    ]
}
